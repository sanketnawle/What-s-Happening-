<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sanketnawle.invitation.ResponseScreen">

    <Button
        android:layout_width="175dp"
        android:layout_height="150dp"
        android:text="Attending"
        android:id="@+id/attending"
        android:minHeight="150dp"
        android:minWidth="170dp"
        android:layout_marginBottom="47dp"
        android:onClick="attending"
        android:layout_above="@+id/mayBeAttending"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="175dp"
        android:layout_height="150dp"
        android:text="Not attending"
        android:id="@+id/notAttending"
        android:minHeight="150dp"
        android:minWidth="170dp"
        android:onClick="notAttending"
        android:layout_alignTop="@+id/attending"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="175dp"
        android:layout_height="150dp"
        android:text="May be "
        android:id="@+id/mayBeAttending"
        android:minHeight="150dp"
        android:minWidth="170dp"
        android:layout_marginBottom="70dp"
        android:onClick="mayBe"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="175dp"
        android:layout_height="150dp"
        android:text="No response"
        android:id="@+id/noResponse"
        android:minHeight="150dp"
        android:minWidth="170dp"
        android:layout_alignTop="@+id/mayBeAttending"
        android:layout_alignStart="@+id/notAttending"
        android:onClick="noResponse" />

</RelativeLayout>
