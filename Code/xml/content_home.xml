<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/app_bar_home"
    tools:context="com.example.sanketnawle.whatshappening.Home">


    <Button
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="Public Posts"
        android:id="@+id/public_posts"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="onPublicPost" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="Invitations"
        android:id="@+id/invitations"
        android:layout_below="@+id/public_posts"
        android:layout_alignParentStart="true"
        android:onClick="onInvitation" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="Area-wise Notifications"
        android:id="@+id/area_wise"
        android:layout_below="@+id/invitations"
        android:layout_alignParentStart="true"
        android:onClick="onAreaWise" />

</RelativeLayout>
